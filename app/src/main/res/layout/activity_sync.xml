<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_primary"
        android:gravity="center"
        android:keepScreenOn="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_wheel" />

        <TextView
            android:id="@+id/tvSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:gravity="center"
            android:text="@string/syncing"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/btnAction"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/btn_rounded"
            android:gravity="center"
            android:paddingStart="@dimen/dp30"
            android:paddingEnd="@dimen/dp30"
            android:text="@string/retry"
            android:textAllCaps="false"
            android:textColor="@color/selector_start"
            android:textSize="@dimen/sp12" />

    </LinearLayout>
</layout>